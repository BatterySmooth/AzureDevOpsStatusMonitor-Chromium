{
    "name": "Azure DevOps Status Monitor",
    "version": "0.2.10",
    "manifest_version": 3,
    "description": "Azure DevOps service health monitor.",
    "permissions": [
        "alarms",
        "storage",
        "notifications",
        "tabs"
    ],
    "icons": {
        "16": "icons/DevOps_16.png",
        "32": "icons/DevOps_32.png",
        "48": "icons/DevOps_48.png",
        "128": "icons/DevOps_128.png"
    },
    "background": {
        "service_worker": "worker/background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "icons/DevOps_16.png",
            "32": "icons/DevOps_32.png",
            "48": "icons/DevOps_48.png",
            "128": "icons/DevOps_128.png"
        },
        "default_title": "Starting...",
        "default_popup": "popup/popup.html"
    }
}